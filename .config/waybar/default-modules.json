{
  "custom/arch": {
    "format": "󰣇",
    "tooltip": false,
    "on-click": "/home/pheiow/.config/rofi/launchers/type-2/launcher.sh",
    "on-click-right": "swaync-client -t"
  },
  "hyprland/workspaces": {
    "show-special": true,
    "all-outputs": false,
    "format": "<span line_height=\"1.4\">{icon}</span>\n<span line_height=\"1.15\">{windows}</span>",
    "format-window-separator": "\n",
    "window-rewrite-default": "",
    "window-rewrite": {
      "Code": "󰨞",
      "xarchiver": "",
      "DBeaver": "",
      "Calculadora": "",
      "transmission": "",
      "vlc": "󰕼",
      "pavucontrol": "󰕾",
      "blueman": "",
      "alacritty": "",
      "google-chrome-stable>": "",
      "Google-chrome": "",
      "thunar": "",
      "ranger": "",
      "imv": "󰈟",
      "mpv": "󰈫",
      "rofi": "",
      "spotify": ""
    },
    "format-icons": {
      "1": "󰎦",
      "2": "󰎩",
      "3": "󰎬",
      "4": "󰎮",
      "5": "󰎰",
      "6": "󰎵",
      "7": "󰎸",
      "8": "󰎻",
      "9": "󰎾",
      "scratchpad": "󰬚"
    },
    "ignore-workspaces": ["(special:)?hell"]
  },
  "group/group-control": {
    "orientation": "inherit",
    "modules": ["group/group-upper", "group/group-lower"]
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
        "activated": "",
        "deactivated": ""
    }
  },
  "group/group-upper": {
    "orientation": "inherit",
    "modules": ["idle_inhibitor","network"]
  },
  "network": {
    "format": "{icon}",
    "format-icons": ["󰤟", "󰤢", "󰤥", "󰤨"],
    "format-ethernet": "󰈀",
    "format-disconnected": "󰤮",
    "format-disabled": "",
    "tooltip-format": "{ifname}\n{ipaddr}",
    "tooltip-format-disconnected": "Not Connected",
    "tooltip-format-disabled": "Disabled",
    "on-click": "alacritty --title nmtui -e nmtui"
  },
  "group/group-lower": {
    "orientation": "inherit",
    "modules": ["clock"]
  },
  "clock": {
    "format": "{:%H\n%M}",
    "locale": "pt_BR.utf8",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "format": {
        "months": "<span font_size='14pt' color='#F8F8F2'><b>{}</b></span>",
        "days": "<span font_size='14pt' color='#F8F8F2'><b>{}</b></span>",
        "weekdays": "<span font_size='14pt' color='#FFB86C'><b>{}</b></span>",
        "today": "<span font_size='14pt' color='#BB9AF7'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  }
}
